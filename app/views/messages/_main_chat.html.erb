<div class="top_chat">
<div class="chat_title">
<%= @room.name%>
</div>
<div class="exit_chat"><a Href="#">チャット終了</a></div>
</div>
<div class="middle_chat">

  <%= render partial:'message', collection: @messages%>

<div>
  <%= form_with model: [@room, @message], class: 'bottom_chat', local: true do |f| %>
  <div class="form">
    <%= f.text_field :content, class: 'text_message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send' %>
<% end %>
